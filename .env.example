# Local env example - DO NOT commit real secrets.
# Fill this file (or create .env locally) with real values on your dev machine.

# DATABASE (Postgres)
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5433/smartgarage
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=CHANGE_ME_DB_PASSWORD

# JPA / Hibernate
SPRING_JPA_HBM2DDL=update
SPRING_JPA_SHOW_SQL=true
SPRING_HIBERNATE_FORMAT_SQL=true
SPRING_HIBERNATE_DIALECT=org.hibernate.dialect.PostgreSQLDialect

# JWT - keep a random 256-bit (32 bytes) Base64-encoded key here
# You can generate one with: openssl rand -base64 32
JWT_SECRET=BASE64_32_BYTES_HERE
JWT_EXPIRATION_MS=3600000

# Server / CORS
SERVER_PORT=8080
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true

# Optional: mail (if added later)
# MAIL_HOST=smtp.example.com
# MAIL_PORT=587
# MAIL_USERNAME=your@mail.com
# MAIL_PASSWORD=CHANGE_ME_MAIL_PASSWORD
